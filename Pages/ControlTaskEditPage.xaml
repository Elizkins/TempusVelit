<Page x:Class="TempusVelit.Pages.ControlTaskEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:TempusVelit.Pages"
      mc:Ignorable="d"
      d:DesignHeight="1024"
      d:DesignWidth="1440"
      Background="{StaticResource WhiteBaseColor}">
    <Page.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily"
                    Value="{StaticResource YsabeauInfant-Medium}" />
            <Setter Property="Foreground"
                    Value="{StaticResource DarkBaseColor}" />
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="FontFamily"
                    Value="{StaticResource YsabeauInfant-Medium}" />
            <Setter Property="Foreground"
                    Value="{StaticResource DarkBaseColor}" />
        </Style>
        <Style TargetType="Button">
            <Setter Property="Background"
                    Value="Transparent" />
            <Setter Property="Foreground"
                    Value="{StaticResource DarkBaseColor}" />
            <Setter Property="FontFamily"
                    Value="{StaticResource Jost-Medium}" />
            <Setter Property="Padding"
                    Value="15, 10" />
            <Setter Property="BorderThickness"
                    Value="0" />
            <Setter Property="FontSize"
                    Value="16" />

        </Style>
    </Page.Resources>
    <Grid>
        <Border Background="{StaticResource LightBaseColor}"
                Margin="50, 50"
                CornerRadius="25">
            <StackPanel>
                <Grid Margin="50, 30, 110, 30">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0"
                               Text="Название:"
                               FontSize="30"
                               VerticalAlignment="Center"
                               Margin="0, 0, 20, 0" />
                    <Border Grid.Column="1"
                            BorderThickness="0"
                            Background="{StaticResource WhiteBaseColor}"
                            CornerRadius="13"
                            Height="60">
                        <TextBox Background="Transparent"
                                 x:Name="nameBox"
                                 Text="{Binding Lesson.LessonName}"
                                 IsEnabled="False"
                                 Margin="20, 0, 0, 0"
                                 FontSize="26"
                                 VerticalAlignment="Center"
                                 BorderThickness="0" />
                    </Border>
                    <Border Grid.Column="2"
                            Background="{StaticResource WhiteBaseColor}"
                            Margin="20, 0, 0, 0"
                            CornerRadius="16"
                            Padding="15, 0"
                            BorderThickness="0"
                            HorizontalAlignment="Center"
                            PreviewMouseLeftButtonDown="LoadImage">
                        <TextBlock Text="Изображение"
                                   FontSize="22"
                                   VerticalAlignment="Center"/>
                    </Border>
                </Grid>
                <ListView Background="{StaticResource WhiteBaseColor}"
                          Margin="50, 0"
                          x:Name="lvQuestionList"
                          BorderThickness="0"
                          MaxHeight="550"
                          HorizontalContentAlignment="Stretch"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                          ScrollViewer.VerticalScrollBarVisibility="Hidden"
                          ScrollViewer.CanContentScroll="False">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0, 5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="{Binding QuestionText}"
                                           FontSize="27"
                                           Grid.Column="0"
                                           TextWrapping="Wrap"
                                           Margin="20, 3, 0, 0" />
                                <Border Background="{StaticResource LightBaseColor}"
                                        Margin="10, 0, 20, 0"
                                        CornerRadius="10"
                                        Grid.Column="1"
                                        BorderThickness="0"
                                        Padding="10"
                                        HorizontalAlignment="Right">
                                    <TextBlock Text="{Binding StageID, StringFormat='Этап {0}'}"
                                               Foreground="{StaticResource DarkBaseColor}"
                                               FontSize="16"
                                               VerticalAlignment="Center" />
                                </Border>
                                <Border Background="{StaticResource NormalBaseColor}"
                                        Grid.Column="2"
                                        CornerRadius="10"
                                        BorderThickness="0"
                                        HorizontalAlignment="Right"
                                        Padding="10"
                                        PreviewMouseLeftButtonDown="OpenQuestion">
                                    <Path Data="M13 23H24.25M18.47 2.5275C18.9676 2.02989 19.6425 1.75034 20.3462 1.75034C21.05 1.75034 21.7249 2.02989 22.2225 2.5275C22.7201 3.02512 22.9996 3.70002 22.9996 4.40375C22.9996 5.10748 22.7201 5.78239 22.2225 6.28L7.20997 21.2938C6.91259 21.5911 6.545 21.8087 6.14122 21.9263L2.55122 22.9738C2.44366 23.0051 2.32964 23.007 2.22111 22.9792C2.11257 22.9514 2.0135 22.8949 1.93428 22.8157C1.85505 22.7365 1.79858 22.6374 1.77077 22.5289C1.74297 22.4203 1.74485 22.3063 1.77622 22.1988L2.82372 18.6088C2.9415 18.2054 3.15903 17.8383 3.45622 17.5413L18.47 2.5275Z"
                                          StrokeThickness="2.5"
                                          Width="20"
                                          Stretch="Uniform"
                                          Stroke="{StaticResource WhiteBaseColor}"
                                          StrokeStartLineCap="Round"
                                          StrokeLineJoin="Round" />
                                </Border>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>
        </Border>
        <Border Padding="5, 0"
                Margin="100"
                Background="Transparent"
                VerticalAlignment="Top"
                HorizontalAlignment="Right"
                PreviewMouseLeftButtonDown="GoBack">
            <Path Stretch="UniformToFill"
                  Height="20"
                  Width="20"
                  VerticalAlignment="Center"
                  Fill="{StaticResource DarkBaseColor}"
                  Data="M6.846 32V25.154H0V23.154H8.846V32H6.846ZM23.192 32V23.154H32.038V25.154H25.192V32H23.192ZM0 8.846V6.846H6.846V0H8.846V8.846H0ZM23.192 8.846V0H25.192V6.846H32.038V8.846H23.192Z" />
        </Border>
    </Grid>
</Page>
