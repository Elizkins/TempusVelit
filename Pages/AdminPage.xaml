<Page x:Class="TempusVelit.Pages.AdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:TempusVelit.Pages"
      mc:Ignorable="d"
      d:DesignHeight="1024"
      d:DesignWidth="1440"
      Background="{StaticResource WhiteBaseColor}">
    <Page.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily"
                    Value="{StaticResource YsabeauInfant-Medium}" />
            <Setter Property="Foreground"
                    Value="{StaticResource DarkBaseColor}" />
        </Style>
    </Page.Resources>
    <Grid>
        <Border Background="{StaticResource LightBaseColor}"
                Margin="50, 50"
                CornerRadius="25">
            <StackPanel>
                <TextBlock Text="Учебные темы"
                           FontSize="30"
                           HorizontalAlignment="Center"
                           Margin="0, 30" />
                <ListView Background="{StaticResource WhiteBaseColor}"
                          Margin="50, 0"
                          x:Name="lessonList"
                          BorderThickness="0"
                          MaxHeight="500"
                          HorizontalContentAlignment="Stretch"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                          ScrollViewer.VerticalScrollBarVisibility="Hidden"
                          ScrollViewer.CanContentScroll="False">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0, 5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="{Binding LessonName}"
                                           FontSize="27"
                                           Grid.Column="0"
                                           TextWrapping="Wrap"
                                           Margin="20, 3, 0, 0" />
                                <Border Background="{StaticResource LightBaseColor}"
                                        Margin="10, 0, 20, 0"
                                        CornerRadius="10"
                                        Grid.Column="1"
                                        BorderThickness="0"
                                        Padding="10"
                                        HorizontalAlignment="Right">
                                    <TextBlock Text="{Binding ModuleID, StringFormat='Модуль {0}'}"
                                               Foreground="{StaticResource DarkBaseColor}" 
                                               FontSize="16"
                                               VerticalAlignment="Center"/>
                                </Border>
                                <Border Background="{StaticResource NormalBaseColor}"
                                        Grid.Column="2"
                                        CornerRadius="10"
                                        BorderThickness="0"
                                        HorizontalAlignment="Right"
                                        Padding="10"
                                        PreviewMouseLeftButtonDown="OpenLesson">
                                    <Path Data="M13 23H24.25M18.47 2.5275C18.9676 2.02989 19.6425 1.75034 20.3462 1.75034C21.05 1.75034 21.7249 2.02989 22.2225 2.5275C22.7201 3.02512 22.9996 3.70002 22.9996 4.40375C22.9996 5.10748 22.7201 5.78239 22.2225 6.28L7.20997 21.2938C6.91259 21.5911 6.545 21.8087 6.14122 21.9263L2.55122 22.9738C2.44366 23.0051 2.32964 23.007 2.22111 22.9792C2.11257 22.9514 2.0135 22.8949 1.93428 22.8157C1.85505 22.7365 1.79858 22.6374 1.77077 22.5289C1.74297 22.4203 1.74485 22.3063 1.77622 22.1988L2.82372 18.6088C2.9415 18.2054 3.15903 17.8383 3.45622 17.5413L18.47 2.5275Z"
                                          StrokeThickness="2.5"
                                          Width="20"
                                          Stretch="Uniform"
                                          Stroke="{StaticResource WhiteBaseColor}"
                                          StrokeStartLineCap="Round"
                                          StrokeLineJoin="Round" />
                                </Border>
                                <Border Background="{StaticResource NormalBaseColor}"
                                        Margin="10, 0, 20, 0"
                                        CornerRadius="10"
                                        Grid.Column="3"
                                        BorderThickness="0"
                                        Padding="10"
                                        HorizontalAlignment="Right"
                                        PreviewMouseLeftButtonDown="DeleteLesson">
                                    <Path Data="M5 8.75H25M12.5 13.75V21.25M17.5 13.75V21.25M6.25 8.75L7.5 23.75C7.5 24.413 7.76339 25.0489 8.23223 25.5178C8.70107 25.9866 9.33696 26.25 10 26.25H20C20.663 26.25 21.2989 25.9866 21.7678 25.5178C22.2366 25.0489 22.5 24.413 22.5 23.75L23.75 8.75M11.25 8.75V5C11.25 4.66848 11.3817 4.35054 11.6161 4.11612C11.8505 3.8817 12.1685 3.75 12.5 3.75H17.5C17.8315 3.75 18.1495 3.8817 18.3839 4.11612C18.6183 4.35054 18.75 4.66848 18.75 5V8.75"
                                          StrokeThickness="2.5"
                                          Width="20"
                                          Stretch="Uniform"
                                          Stroke="{StaticResource WhiteBaseColor}"
                                          StrokeStartLineCap="Round"
                                          StrokeLineJoin="Round" />
                                </Border>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <TextBlock Text="+ добавить тему"
                           FontSize="30"
                           HorizontalAlignment="Center"
                           Foreground="#413717"
                           PreviewMouseLeftButtonDown="CreateNewLesson"
                           Margin="0, 30, 0, 30" />
            </StackPanel>
        </Border>
        <Border Padding="5, 0"
                Margin="100"
                Background="Transparent"
                VerticalAlignment="Top"
                HorizontalAlignment="Right"
                PreviewMouseLeftButtonDown="GoBack">
            <Path Stretch="UniformToFill"
                  Height="20"
                  Width="20"
                  VerticalAlignment="Center"
                  Fill="{StaticResource DarkBaseColor}"
                  Data="M6.846 32V25.154H0V23.154H8.846V32H6.846ZM23.192 32V23.154H32.038V25.154H25.192V32H23.192ZM0 8.846V6.846H6.846V0H8.846V8.846H0ZM23.192 8.846V0H25.192V6.846H32.038V8.846H23.192Z" />
        </Border>
    </Grid>
</Page>
