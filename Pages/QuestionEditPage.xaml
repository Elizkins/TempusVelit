<Page x:Class="TempusVelit.Pages.QuestionEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:TempusVelit.Pages"
      mc:Ignorable="d"
      d:DesignHeight="1024"
      d:DesignWidth="1440"
      Background="{StaticResource WhiteBaseColor}">
    <Page.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily"
                    Value="{StaticResource YsabeauInfant-Medium}" />
            <Setter Property="Foreground"
                    Value="{StaticResource DarkBaseColor}" />
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="FontFamily"
                    Value="{StaticResource YsabeauInfant-Medium}" />
            <Setter Property="Foreground"
                    Value="{StaticResource DarkBaseColor}" />
        </Style>
    </Page.Resources>
    <Grid>
        <Border Background="{StaticResource LightBaseColor}"
                Margin="50, 50"
                CornerRadius="25">
            <StackPanel>
                <Grid Margin="50, 30, 110, 30">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0"
                               Text="Название:"
                               FontSize="30"
                               VerticalAlignment="Center"
                               Margin="0, 0, 20, 0" />
                    <Border Grid.Column="1"
                            BorderThickness="0"
                            Background="{StaticResource WhiteBaseColor}"
                            CornerRadius="13"
                            Height="60">
                        <TextBox Background="Transparent"
                                 x:Name="nameBox"
                                 Text="{Binding QuestionText}"
                                 Margin="20, 0, 0, 0"
                                 FontSize="26"
                                 VerticalAlignment="Center"
                                 BorderThickness="0" />
                    </Border>
                </Grid>
                <ListView Background="{StaticResource WhiteBaseColor}"
                          Margin="50, 0"
                          x:Name="lvAnswersList"
                          BorderThickness="0"
                          MaxHeight="550"
                          HorizontalContentAlignment="Stretch"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                          ScrollViewer.VerticalScrollBarVisibility="Hidden"
                          ScrollViewer.CanContentScroll="False">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0, 5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBox Text="{Binding AnswerText}"
                                         FontSize="27"
                                         Grid.Column="0"
                                         TextWrapping="Wrap"
                                         Margin="20, 3, 0, 0"
                                         BorderThickness="0" />
                                <Border Grid.Column="1"
                                        Background="{StaticResource LightBaseColor}"
                                        Padding="10, 0"
                                        CornerRadius="8">
                                    <StackPanel VerticalAlignment="Center"
                                                HorizontalAlignment="Center"
                                                Orientation="Horizontal">
                                        <TextBlock HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   Foreground="{StaticResource DarkBaseColor}"
                                                   Text="Правильный"
                                                   TextWrapping="Wrap"
                                                   FontSize="16"
                                                   FontFamily="{StaticResource Jost-Light}" />
                                        <CheckBox Style="{DynamicResource CheckBoxStyle}"
                                                  Margin="15, 0, 0, 0"
                                                  IsChecked="{Binding IsCorrect}"
                                                  Foreground="{StaticResource WhiteBaseColor}"
                                                  Background="{StaticResource WhiteBaseColor}"
                                                  VerticalAlignment="Center" />
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <StackPanel x:Name="thirdPanel"
                            Visibility="Collapsed">
                    <Grid Margin="50, 30, 50, 10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="110" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   Text="Таблицы:"
                                   FontSize="22"
                                   VerticalAlignment="Center"
                                   Margin="0, 0, 20, 0" />
                        <Border Grid.Column="1"
                                BorderThickness="0"
                                Background="{StaticResource WhiteBaseColor}"
                                CornerRadius="13"
                                Height="50">
                            <TextBox Background="Transparent"
                                     Text="{Binding RequiredTables}"
                                     Margin="20, 0, 0, 0"
                                     FontSize="22"
                                     VerticalAlignment="Center"
                                     BorderThickness="0" />
                        </Border>
                    </Grid>
                    <Grid Margin="50, 0, 50, 10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="110" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   Text="Условия:"
                                   FontSize="22"
                                   VerticalAlignment="Center"
                                   Margin="0, 0, 20, 0" />
                        <Border Grid.Column="1"
                                BorderThickness="0"
                                Background="{StaticResource WhiteBaseColor}"
                                CornerRadius="13"
                                Height="50">
                            <TextBox Background="Transparent"
                                     Text="{Binding RequiredConditions}"
                                     Margin="20, 0, 0, 0"
                                     FontSize="22"
                                     VerticalAlignment="Center"
                                     BorderThickness="0" />
                        </Border>
                    </Grid>
                    <Grid Margin="50, 0, 50, 0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="110" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   Text="Столбцы:"
                                   FontSize="22"
                                   VerticalAlignment="Center"
                                   Margin="0, 0, 20, 0" />
                        <Border Grid.Column="1"
                                BorderThickness="0"
                                Background="{StaticResource WhiteBaseColor}"
                                CornerRadius="13"
                                Height="50">
                            <TextBox Background="Transparent"
                                     Text="{Binding RequiredColumns}"
                                     Margin="20, 0, 0, 0"
                                     FontSize="22"
                                     VerticalAlignment="Center"
                                     BorderThickness="0" />
                        </Border>
                    </Grid>
                </StackPanel>
            </StackPanel>
        </Border>
        <Border Padding="5, 0"
                Margin="100"
                Background="Transparent"
                VerticalAlignment="Top"
                HorizontalAlignment="Right"
                PreviewMouseLeftButtonDown="GoBack">
            <Path Stretch="UniformToFill"
                  Height="20"
                  Width="20"
                  VerticalAlignment="Center"
                  Fill="{StaticResource DarkBaseColor}"
                  Data="M6.846 32V25.154H0V23.154H8.846V32H6.846ZM23.192 32V23.154H32.038V25.154H25.192V32H23.192ZM0 8.846V6.846H6.846V0H8.846V8.846H0ZM23.192 8.846V0H25.192V6.846H32.038V8.846H23.192Z" />
        </Border>
    </Grid>
</Page>
