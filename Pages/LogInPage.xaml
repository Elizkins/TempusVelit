                <TextBlock Text="Регистрация"
                           TextDecorations="Underline"
                           FontSize="20"
                           Margin="5, 0"
                           FontFamily="{StaticResource YsabeauInfant-Bold}"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
