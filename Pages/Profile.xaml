<Page x:Class="TempusVelit.Pages.Profile"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:TempusVelit.Pages"
      xmlns:assets="clr-namespace:TempusVelit.Assets"
      mc:Ignorable="d"
      d:DesignHeight="1500"
      d:DesignWidth="1440"
      Background="White">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <assets:MenuControl Grid.Column="0"
                            HorizontalAlignment="Left"
                            Width="100" />
        <ScrollViewer Grid.Column="1"
                      VerticalScrollBarVisibility="Hidden">
            <Grid Margin="40, 40, 40, 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Label Grid.Column="0"
                       Grid.Row="0"
                       Content="Привет, Ари"
                       Margin="35, 0, 0, 0"
                       HorizontalContentAlignment="Center"
                       FontSize="48"
                       FontFamily="{StaticResource YsabeauInfant-SemiBold}" />
                <Border Grid.Column="1"
                        Grid.Row="0" />
                <Border Grid.Column="2"
                        Grid.Row="0"
                        Margin="0, 0, 45, 0"
                        HorizontalAlignment="Right"
                        BorderThickness="3"
                        BorderBrush="{StaticResource LightBaseColor}"
                        Height="80"
                        Width="250"
                        CornerRadius="16">
                    <Border.Effect>
                        <DropShadowEffect Color="Black"
                                          BlurRadius="10"
                                          Opacity="0.25"
                                          Direction="310" />
                    </Border.Effect>
                    <Border Background="{StaticResource WhiteBaseColor}"
                            CornerRadius="16">
                        <Label Grid.Column="0"
                               Content="Уровень 3"
                               Foreground="{StaticResource NormalBaseColor}"
                               HorizontalContentAlignment="Center"
                               VerticalContentAlignment="Center"
                               FontSize="36"
                               FontFamily="{StaticResource YsabeauInfant-Medium}" />
                    </Border>
                </Border>
                <Border Grid.Column="0"
                        Grid.ColumnSpan="3"
                        Grid.Row="1"
                        Height="500"
                        Margin="0, 40, 0, 70"
                        CornerRadius="16"
                        BorderThickness="0"
                        Background="{StaticResource LightBaseColor}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0"
                                Width="373"
                                HorizontalAlignment="Left"
                                Margin="3"
                                CornerRadius="15"
                                BorderThickness="0"
                                Background="{StaticResource WhiteBaseColor}">
                            <StackPanel VerticalAlignment="Center">
                                <Border Height="260"
                                        Width="260"
                                        CornerRadius="130"
                                        BorderBrush="{StaticResource LightBaseColor}"
                                        BorderThickness="7">
                                    <Image Source="/Resources/avatar.png" />
                                </Border>
                                <Label Margin="0, 35, 0, 0"
                                       Content="МЕСТО В РЕЙТИГЕ"
                                       HorizontalContentAlignment="Center"
                                       FontSize="23"
                                       FontFamily="{StaticResource YsabeauInfant-ExtraLight}" />
                                <Label Content="72"
                                       HorizontalContentAlignment="Center"
                                       FontSize="34"
                                       FontFamily="{StaticResource YsabeauInfant-SemiBold}" />
                            </StackPanel>
                        </Border>
                        <Grid Grid.Column="1"
                              Margin="50, 0, 50, 0"
                              VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Label Grid.Column="0"
                                   Grid.Row="0"
                                   Content="Уровень 3"
                                   Foreground="{StaticResource BlackBaseColor}"
                                   FontSize="34"
                                   FontFamily="{StaticResource YsabeauInfant-Medium}" />
                            <Label Grid.Column="1"
                                   Grid.Row="0"
                                   Content="ЕЩЕ 31 БАЛЛ"
                                   VerticalContentAlignment="Center"
                                   HorizontalContentAlignment="Right"
                                   FontSize="23"
                                   FontFamily="{StaticResource YsabeauInfant-ExtraLight}" />
                            <Grid Grid.Column="0"
                                  Grid.ColumnSpan="2"
                                  Grid.Row="1"
                                  Margin="0, 30, 0, 40">
                                <Border BorderThickness="0"
                                        Background="{StaticResource WhiteBaseColor}"
                                        CornerRadius="5"
                                        Height="10" />
                                <Border BorderThickness="0"
                                        Background="{StaticResource DarkBaseColor}"
                                        CornerRadius="5"
                                        Height="10"
                                        Width="560"
                                        HorizontalAlignment="Left" />
                            </Grid>
                            <Label Grid.Column="0"
                                   Grid.ColumnSpan="2"
                                   Grid.Row="2"
                                   Content="Последние достижения"
                                   Foreground="{StaticResource BlackBaseColor}"
                                   HorizontalContentAlignment="Left"
                                   FontSize="34"
                                   FontFamily="{StaticResource YsabeauInfant-Medium}" />
                            <StackPanel Grid.Column="0"
                                        Grid.ColumnSpan="2"
                                        Grid.Row="3"
                                        Orientation="Horizontal"
                                        Margin="0, 20, 0, 40">
                                <Border Height="120"
                                        Width="120"
                                        CornerRadius="60"
                                        BorderBrush="{StaticResource WhiteBaseColor}"
                                        BorderThickness="5"
                                        Margin="0, 0, 25, 0">
                                    <Image Source="/Resources/avatar.png" />
                                </Border>
                                <Border Height="120"
                                        Width="120"
                                        CornerRadius="60"
                                        BorderBrush="{StaticResource WhiteBaseColor}"
                                        BorderThickness="5"
                                        Margin="0, 0, 25, 0">
                                    <Image Source="/Resources/avatar.png" />
                                </Border>
                                <Border Height="120"
                                        Width="120"
                                        CornerRadius="60"
                                        BorderBrush="{StaticResource WhiteBaseColor}"
                                        BorderThickness="5"
                                        Margin="0, 0, 25, 0">
                                    <Image Source="/Resources/avatar.png" />
                                </Border>
                                <Border Height="120"
                                        Width="120"
                                        CornerRadius="60"
                                        BorderBrush="{StaticResource WhiteBaseColor}"
                                        BorderThickness="5">
                                    <Image Source="/Resources/avatar.png" />
                                </Border>
                            </StackPanel>
                            <Label Grid.Column="0"
                                   Grid.Row="4"
                                   Content="ПРОЙДЕНО 15 ИЗ 47 УРОКОВ"
                                   HorizontalContentAlignment="Left"
                                   FontSize="20"
                                   FontFamily="{StaticResource YsabeauInfant-ExtraLight}" />
                            <Label Grid.Column="1"
                                   Grid.Row="4"
                                   Content="ПОСЛЕДНИЙ ВХОД: 2025.02.15 20:30"
                                   HorizontalContentAlignment="Right"
                                   FontSize="20"
                                   FontFamily="{StaticResource YsabeauInfant-ExtraLight}" />
                        </Grid>
                    </Grid>
                </Border>
                <Border Grid.Column="0"
                        Grid.ColumnSpan="3"
                        Grid.Row="2"
                        Height="480"
                        CornerRadius="16, 16, 0, 0"
                        BorderThickness="3"
                        BorderBrush="{StaticResource LightBaseColor}"
                        Background="{StaticResource WhiteBaseColor}">
                    <Grid Margin="70">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Label Grid.Column="0"
                               Grid.ColumnSpan="2"
                               Grid.Row="0"
                               Content="Персональная информация"
                               Foreground="{StaticResource BlackBaseColor}"
                               HorizontalContentAlignment="Left"
                               FontSize="34"
                               FontFamily="{StaticResource YsabeauInfant-Medium}" />

                        <StackPanel Grid.Column="0"
                                    Grid.Row="2"
                                    Height="65"
                                    Margin="0, 50, 0, 60">
                            <Label Content="Фамилия"
                                   Foreground="{StaticResource BlackBaseColor}"
                                   HorizontalContentAlignment="Left"
                                   FontSize="24"
                                   FontFamily="{StaticResource Jost-ExtraLight}"
                                   Margin="-5, -10, 0, -15"/>
                            <Label Content="Lindgren"
                                   Foreground="{StaticResource BlackBaseColor}"
                                   HorizontalContentAlignment="Left"
                                   FontSize="30"
                                   Margin="-5, 0, 0, 0"
                                   FontFamily="{StaticResource YsabeauInfant-Medium}" />
                        </StackPanel>
                        <StackPanel Grid.Column="1"
                                    Grid.Row="2"
                                    Height="65">
                            <Label Content="Имя"
                                   Foreground="{StaticResource BlackBaseColor}"
                                   HorizontalContentAlignment="Left"
                                   FontSize="24"
                                   FontFamily="{StaticResource Jost-ExtraLight}"
                                   Margin="-5, -10, 0, -15" />
                            <Label Content="Ari"
                                   Foreground="{StaticResource BlackBaseColor}"
                                   HorizontalContentAlignment="Left"
                                   FontSize="30"
                                   Margin="-5, 0, 0, 0"
                                   FontFamily="{StaticResource YsabeauInfant-Medium}" />
                        </StackPanel>
                        <StackPanel Grid.Column="0"
                                    Grid.Row="3"
                                    Height="65">
                            <Label Content="Email"
                                   Foreground="{StaticResource BlackBaseColor}"
                                   HorizontalContentAlignment="Left"
                                   FontSize="24"
                                   FontFamily="{StaticResource Jost-ExtraLight}"
                                   Margin="-5, -10, 0, -15" />
                            <Label Content="sheryl.Hahn12@hotmail.com"
                                   Foreground="{StaticResource BlackBaseColor}"
                                   HorizontalContentAlignment="Left"
                                   FontSize="30"
                                   Margin="-5, 0, 0, 0"
                                   FontFamily="{StaticResource YsabeauInfant-Medium}" />
                        </StackPanel>
                        <StackPanel Grid.Column="1"
                                    Grid.Row="3"
                                    Height="65">
                            <Label Content="Номер телефона"
                                   Foreground="{StaticResource BlackBaseColor}"
                                   HorizontalContentAlignment="Left"
                                   FontSize="24"
                                   FontFamily="{StaticResource Jost-ExtraLight}"
                                   Margin="-5, -10, 0, -15" />
                            <Label Content="+799926453417"
                                   Foreground="{StaticResource BlackBaseColor}"
                                   HorizontalContentAlignment="Left"
                                   FontSize="30"
                                   Margin="-5, 0, 0, 0"
                                   FontFamily="{StaticResource YsabeauInfant-Medium}" />
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
