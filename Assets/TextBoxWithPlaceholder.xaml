<UserControl x:Class="TempusVelit.Assets.TextBoxWithPlaceholder"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:TempusVelit.Assets"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <Border Height="70"
            Width="500"
            BorderThickness="1"
            Background="{StaticResource WhiteBaseColor}"
            CornerRadius="10">
        <Border.Style>
            <Style TargetType="Border">
                <Setter Property="BorderBrush"
                        Value="{Binding Color, RelativeSource={RelativeSource AncestorType=UserControl}, UpdateSourceTrigger=PropertyChanged}" />
                <Style.Triggers>
                    <DataTrigger Binding="{Binding Text.Length, ElementName=entry}"
                                 Value="0">
                        <Setter Property="BorderBrush"
                                Value="{StaticResource DarkBaseColor}" />
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </Border.Style>
        <Grid Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Path Grid.Column="0"
                  Data="{Binding Icon, RelativeSource={RelativeSource AncestorType=UserControl}}"
                  VerticalAlignment="Center"
                  Margin="0, 0, 20, 0">
                <Path.Style>
                    <Style TargetType="Path">
                        <Setter Property="Fill"
                                Value="{Binding Color, RelativeSource={RelativeSource AncestorType=UserControl}, UpdateSourceTrigger=PropertyChanged}" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Text.Length, ElementName=entry}"
                                         Value="0">
                                <Setter Property="Fill"
                                        Value="{StaticResource DarkBaseColor}" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Path.Style>
            </Path>
            <TextBox x:Name="entry"
                     Text="{Binding Text, RelativeSource={RelativeSource AncestorType=UserControl}, UpdateSourceTrigger=PropertyChanged}"
                     Grid.Column="1"
                     FontSize="20"
                     FontFamily="{StaticResource YsabeauInfant-Medium}"
                     GotFocus="RemovePlaceholder"
                     LostFocus="AddPlaceholder"
                     TextChanged="EntryTextChanged"
                     BorderThickness="0">
                <TextBox.Style>
                    <Style TargetType="TextBox">
                        <Setter Property="Foreground"
                                Value="{Binding Color, RelativeSource={RelativeSource AncestorType=UserControl}, UpdateSourceTrigger=PropertyChanged}" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Text.Length, RelativeSource={RelativeSource Self}}"
                                         Value="0">
                                <Setter Property="Foreground"
                                        Value="{StaticResource DarkBaseColor}" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBox.Style>
            </TextBox>
            <TextBlock x:Name="placeholder"
                       Grid.Column="1"
                       Foreground="{StaticResource DarkBaseColor}"
                       Text="{Binding Placeholder, RelativeSource={RelativeSource AncestorType=UserControl}}"
                       Visibility="Visible"
                       FontSize="20"
                       FontFamily="{StaticResource YsabeauInfant-Medium}"
                       HorizontalAlignment="Left"
                       PreviewMouseLeftButtonDown="RemovePlaceholderMB"
                       Background="Transparent" />
        </Grid>
    </Border>
</UserControl>
